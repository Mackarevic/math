<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="primary_color">#0946AF</color>
    <color name="primary_dark_color">#073687</color>
    <color name="accent_color">#77C57B</color>
    <color name="control_normal_color">#C50B37</color>
    <color name="control_highlight_color">#E596A9</color>

    <style name="AppTheme.Normal" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlNormal">@color/control_normal_color</item>
        <item name="colorControlHighlight">@color/control_highlight_color</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlNormal">@color/control_normal_color</item>
        <item name="colorControlHighlight">@color/control_highlight_color</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>